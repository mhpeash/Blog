@model IEnumerable<ProblemsBlog.Models.UserPost>
     

@{

    ViewBag.Title = "Home";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Home</title>
    <link href="~/Content/blog-home.css" rel="stylesheet" />
    @*<link href="~/Content/bootstrap.css" rel="stylesheet" />*@
</head>
<body>

    <div class="container text-center">
        <section style="border: 2px solid rgb(255,204,51); background-color: black; color: rgb(255,204,51); "><h1> হেক্কুর-ডায়রি </h1></section>
    </div>


        @foreach (var item in Model)
    {

        <div class="container">
                            <div class="row">
                                <!-- Blog Entries Column -->
                                <div class="col-md-8">
                                    <h1 class="page-header"></h1>
                                    <!-- First Blog Post -->
                                    <h2>
                                        <a href="#">@Html.DisplayFor(modelItem => item.PostTitle)</a>
                                    </h2>
                                    <p class="lead">
                                        by <a href="#">@Html.DisplayFor(modelItem => item.Author)</a>
                                    </p>
                                    <p><span class="glyphicon glyphicon-time"></span> Posted on @Html.DisplayFor(modelItem => item.Time) </p>
                                    <hr>
                                    <img class="img-responsive" src="/@Html.DisplayFor(modelItem => item.Image)">
                                    <hr>
                                    <h4> @item.PostContent.Substring(0, 100)@Html.ActionLink("See More....", "Details", new { id = @Html.DisplayFor(modelItem => item.UserPostId) })</h4>
                                   
                                </div>
                                <div class="col-md-4"></div>
                            </div>
                        </div>

    }





</body>
</html>
