
@{Layout = null;}
@model ProblemsBlog.Models.User
@using ProblemsBlog.Models



<!DOCTYPE html>
<html lang="en">
<head>
    <title>UserInfo</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

    <style>
        #bg1 {
            background-image: url("/Images/bg.jpg");
            background-size: 100% 100%;
            background-repeat: no-repeat;
            padding: 0px;
            margin-top: 0px;
        }

        #rowbg {
            background-color: rgba(0, 0, 0, 0.8); /*rgba(24,188,156,0.8);*/
            height: 947px;
            width: 100%;
            margin: 0px;
        }

        .well {
            background-color: white;
            margin-top: 120px;
            letter-spacing: 1px;
        }

        .navbar {
            border: 0;
            font-size: 15px !important;
            line-height: 1.42857143 !important;
            letter-spacing: 3px;
            border-radius: 0;
            font-family: Montserrat, sans-serif;
            background-color: #ffd24d;
        }

            .navbar li a, .navbar .navbar-brand {
                color: #fff !important;
            }

        .navbar-nav li a:hover, .navbar-nav li.active a {
            color: black !important;
            /*background-color: #E84C4C !important;*/
            background-color: #FFF !important;
        }

        .navbar-inverse .navbar-toggle {
            border-color: transparent;
            color: #fff !important;
        }


        footer a:hover {
            color: #ffd24d;
            text-decoration: none;
        }


        .dropdown {
            position: relative;
            display: inline-block;
        }


            li a:hover, .dropdown:hover .dropbtn {
                background-color: rgb(255,204,51);
            }

        li.dropdown {
            display: inline-block;
        }

        .dropdown-content {
            display: none;
            position: absolute;
            background-color: rgb(255,204,51);
            color: white;
            min-width: 150px;
            /*// box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);*/
        }

            .dropdown-content a {
                color: black;
                padding: 12px 16px;
                text-decoration: none;
                display: block;
                text-align: left;
            }

                .dropdown-content a:hover {
                    background-color: #f9f9f9;
                }

        .dropdown:hover .dropdown-content {
            display: block;
        }
    </style>
</head>


<body>



    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/Post/UserHome">POPS-Blog</a>
            </div><!--end navheader-->

            <div class="collapse navbar-collapse" id="myNavbar">
                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown">
                        <a href="#" class="dropbtn">
                            <span class="glyphicon glyphicon-wrench"></span>Change-Password
                        </a>
                        <div class="dropdown-content">
                            <a href="/Registration/Edit/@Session["UserId"]">Edit Info</a>
                            <a href="#">Change Coverphoto</a>
                            <a href="#">Change ProfilePicture</a>
                        </div>
                    </li>
                    <li><a href="/Registration/UserProfile"><span class="glyphicon glyphicon-user"></span>Profile</a></li>
                    <li><a href="#"><span class="glyphicon glyphicon-send"></span>Contact-Admin</a></li>
                    @*<li><a href="#"> <span class="glyphicon glyphicon-cog"></span>Change-Password</a></li>*@
                    <li><a href="/Registration/Logout"><span class="glyphicon glyphicon-log-out"></span>Logout|@Session["UserName"]</a></li>

                </ul>
            </div><!--glyphicon divright-->

        </div> <!--end header container-fluid-->
    </nav>

    @{
        IEnumerable<UserPost> totalPosts = ViewData["TotalPost"] as IEnumerable<UserPost>;
        Int32 a = totalPosts.Count();

    }









    <div class="container-fluid" id="bg1">
        <div id="rowbg">
            <div class="container">
                <div class="row">
                    <div class="col-lg-2"></div>
                    <div class="col-lg-8 well text-center">
                        <img src="/@Html.DisplayFor(model => model.Image)" class="img-responsive img-thumbnail" width="300" height="280">
                        <h1>@Html.DisplayFor(model => model.Name)</h1>
                        <h2>From:@Html.DisplayFor(model => model.Location)</h2>
                        <h2>Total Post:@a</h2>
                        <h2>Contact:@Html.DisplayFor(model => model.Email)</h2>
                    </div>
                    <div class="col-lg-2"></div>
                </div>
            </div>
        </div>
    </div>
    <!--........................................................................................footer section-->

    <div class="container-fluid" style="padding:20px;background-color:#313131;color:#E84C4C">
        <footer>
            <div class="row">
                <div class="col-sm-4"></div>
                <div class="col-sm-4 text-center">
                    <h4>All Right Reserved By 2016 <a href="https://mhpeash.github.io/Home.html">| mhpeash |</a> </h4>
                </div>
                <div class="col-sm-4"></div>
            </div>


        </footer>

    </div>

</body>
</html>
