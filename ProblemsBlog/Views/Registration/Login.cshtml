@model ProblemsBlog.Models.User


@{
    ViewBag.Title = "Login";
}



<div class="container">
    <div class="row" style="padding: 20px">

        <div class="col-sm-6 img-responsive img-rounded">
            <img src="/Images/logo.jpg" width="350" height="350">
        </div>

        <div class="col-sm-6">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <h2> User Login</h2>
                    <hr />
                    @Html.ValidationSummary(true)

                    <div class="form-group">
                        @Html.LabelFor(model => model.UserName, new { @class = "control-label col-md-6" })
                        <div class="col-md-6">
                            @Html.EditorFor(model => model.UserName)
                            @Html.ValidationMessageFor(model => model.UserName)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Password, new { @class = "control-label col-md-6" })
                        <div class="col-md-6">
                            @Html.EditorFor(model => model.Password)
                            @Html.ValidationMessageFor(model => model.Password)
                            
                        </div>
                    </div>
                    <div class="form-group text-danger">
                     
                        <div class="control-label col-md-6"> </div>
                        <div class="col-md-6">@ViewBag.Message</div>

                    </div>


                    <div class="form-group">
                        <div class="col-md-offset-8 col-md-4">
                            <input type="submit" value="Login" class="btn btn-success" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

</div>




@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


