    <style>
        body {
            background-color: #e6e6e6;
        }

        .navbar {
            border: 0;
            font-size: 15px !important;
            line-height: 1.42857143 !important;
            letter-spacing: 3px;
            border-radius: 0;
            font-family: Montserrat, sans-serif;
            background-color: rgb(255,204,51);
        }

            .navbar li a, .navbar .navbar-brand {
                color: #fff !important;
            }

        .navbar-nav li a:hover, .navbar-nav li.active a {
            color: black !important;
            //background-color: #E84C4C !important;
            background-color: #fff !important;
        }

        .navbar-inverse .navbar-toggle {
            border-color: transparent;
            color: #fff !important;
            background-color: rgba(0, 0, 0, 0.8);
        }


        footer a:hover {
            color: #ffd24d;
            text-decoration: none;
        }


        #coverphoto {
            background-image: url("/Images/1.1.gif");
            background-repeat: no-repeat;
            background-size: 100% 40%;
        }

        .well {
            background-color: white;
            font-family: 'Patua One',cursive;
            letter-spacing: 1px;
        }



        .dropdown {
            position: relative;
            display: inline-block;
        }


            li a:hover, .dropdown:hover .dropbtn {
                background-color: rgb(255,204,51);
            }

        li.dropdown {
            display: inline-block;
        }

        .dropdown-content {
            display: none;
            position: absolute;
            background-color: rgb(255,204,51);
            color: white;
            min-width: 150px;
            // box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
        }

            .dropdown-content a {
                color: black;
                padding: 12px 16px;
                text-decoration: none;
                display: block;
                text-align: left;
            }

                .dropdown-content a:hover {
                    background-color: #f9f9f9;
                }

        .dropdown:hover .dropdown-content {
            display: block;
        }
        .contfor {
            width:100px;
            height:5px;
        }
    </style>

</head>

<body>

    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/Post/UserHome">POPS-Blog</a>
            </div><!--end navheader-->

            <div class="collapse navbar-collapse" id="myNavbar">
                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown">
                        <a href="#" class="dropbtn">
                            <span class="glyphicon glyphicon-wrench"></span>Settings
                        </a>
                        <div class="dropdown-content">
                            <a href="#">Edit Info</a>
                            <a href="#">Change Coverphoto</a>
                            <a href="#">Change ProfilePicture</a>
                        </div>
                    </li>
                    <li><a href="#"><span class="glyphicon glyphicon-send"></span>Contact-Admin</a></li>
                    <li><a href="#"> <span class="glyphicon glyphicon-cog"></span>Change-Password</a></li>
